<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bocso_Renata_Lab7.ListEntryPage"
             Title="ListEntryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Shopping List"
 Clicked="OnShopListAddedClicked" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <ListView x:Name="listView"
 Margin="20"
 ItemSelected="OnListViewItemSelected" SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding Description}" />
                                <Button Text="Delete Item" Clicked="OnDeleteItemClicked"/>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>